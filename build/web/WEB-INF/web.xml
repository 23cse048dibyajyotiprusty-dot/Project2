<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- Application Display Name -->
    <display-name>ShopEasy E-Commerce Application</display-name>
    <description>
        A comprehensive e-commerce web application built with JSP, Servlet, JDBC, and MySQL.
        Features include user registration/login, product catalog, shopping cart, order management,
        and admin dashboard with full CRUD operations.
    </description>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Context Parameters -->
    <context-param>
        <param-name>application.name</param-name>
        <param-value>ShopEasy</param-value>
    </context-param>
    
    <context-param>
        <param-name>application.version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>
    
    <context-param>
        <param-name>database.pool.size</param-name>
        <param-value>20</param-value>
    </context-param>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- 30 minutes -->
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Set to true in production with HTTPS -->
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    
    <!-- Security Configuration -->
    <!-- Prevent access to sensitive directories -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <!-- No roles specified means no access via URL manipulation -->
        </auth-constraint>
    </security-constraint>
    
    <!-- Error Pages -->
    <error-page>
        <error-code>400</error-code>
        <location>/error/400.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>401</error-code>
        <location>/error/401.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>403</error-code>
        <location>/error/403.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/500.jsp</location>
    </error-page>
    
    <!-- MIME Type Mappings -->
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>
    
    <!-- Security Headers Filter -->
    <filter>
        <filter-name>SecurityHeadersFilter</filter-name>
        <filter-class>com.ecommerce.util.SecurityHeadersFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>SecurityHeadersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.ecommerce.util.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Authentication Filter for Admin Pages -->
    <filter>
        <filter-name>AdminAuthFilter</filter-name>
        <filter-class>com.ecommerce.util.AdminAuthFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AdminAuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    
    <!-- User Authentication Filter for Protected Pages -->
    <filter>
        <filter-name>UserAuthFilter</filter-name>
        <filter-class>com.ecommerce.util.UserAuthFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/dashboard.jsp</url-pattern>
        <url-pattern>/cart.jsp</url-pattern>
        <url-pattern>/checkout.jsp</url-pattern>
        <url-pattern>/orders.jsp</url-pattern>
        <url-pattern>/profile.jsp</url-pattern>
    </filter-mapping>
    
    <!-- Application Startup Listener -->
    <listener>
        <listener-class>com.ecommerce.util.AppContextListener</listener-class>
    </listener>
    
    <!-- Resource References for JNDI -->
    <!-- 
    <resource-ref>
        <description>DB Connection Pool</description>
        <res-ref-name>jdbc/ECommerceDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    -->
    
    <!-- JSP Configuration -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>false</scripting-invalid>
        </jsp-property-group>
    </jsp-config>
    
    <!-- Prevent access to .class files -->
    <mime-mapping>
        <extension>class</extension>
        <mime-type>application/octet-stream</mime-type>
    </mime-mapping>
    
    <!-- Security constraint to prevent access to .class files -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Class Files</web-resource-name>
            <url-pattern>*.class</url-pattern>
        </web-resource-collection>
        <auth-constraint />
    </security-constraint>
    
    <!-- Prevent access to configuration files -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Configuration Files</web-resource-name>
            <url-pattern>*.properties</url-pattern>
            <url-pattern>*.xml</url-pattern>
        </web-resource-collection>
        <auth-constraint />
    </security-constraint>
    
</web-app>